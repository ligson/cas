<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <bean id="dubboConfig"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:dubbo.properties"/>
    </bean>

    <dubbo:application name="${dubbo.application.name}"/>

    <!-- 账户 -->
    <dubbo:reference id="userApi"
                     interface="org.ca.cas.user.api.UserApi"
                     timeout="${dubbo.consumer.timeout}"
                     version="${dubbo.ca.iterface.version}" url="${dubbo.ca.registry.address}"/>
    <!--直连增加url="${dubbo.registry.address}"-->
    <dubbo:reference id="certApi"
                     interface="org.ca.cas.cert.api.CertApi"
                     timeout="${dubbo.consumer.timeout}"
                     version="${dubbo.ca.iterface.version}" url="${dubbo.ca.registry.address}"/>
    <dubbo:reference id="keyApi"
                     interface="org.ca.kms.key.api.KeyApi"
                     timeout="${dubbo.consumer.timeout}"
                     version="${dubbo.kms.iterface.version}" url="${dubbo.kms.registry.address}"/>

</beans>